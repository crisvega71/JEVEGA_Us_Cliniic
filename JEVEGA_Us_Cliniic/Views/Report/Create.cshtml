@model JEVEGA_Us_Cliniic.Models.ReportModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout_inner_page.cshtml";
}

<table class="table_clinic_pageheader">
    <tr>
        <td><h3>New Report Template</h3></td>
        <td align="right"></td>
    </tr>
</table>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-2">
                <span class="report_fieldvalue_01">Report Category : </span>
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ReportCategory, (SelectList)ViewBag.ReportTemplateCategories, "- Select a Category -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ReportCategory, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="div_space20"></div>
        <div>
            <span class="report_fieldvalue_01">Report Write-Ups : </span>
        </div>

        <div class="line_space"></div>
        <div class="line_space"></div>
        <div class="row">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.ReportWriteUps, new { @class = "textarea_report", rows = "20" })
                @Html.ValidationMessageFor(model => model.ReportWriteUps, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="line_space"></div>
        <table class="table table-bordered">
        <tr>
            <td>
                <input type="submit" value="Add Report Template" class="btn btn-default" />
                &nbsp;
                <input type="button" value="Cancel" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "Report") + "'");" />
            </td>
        </tr>
        </table>

    </div>
}

