@model IEnumerable<JEVEGA_Us_Cliniic.DiagnosticExam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_inner_page.cshtml";
}

<table class="table_clinic_pageheader" @*style="background-color:aliceblue; width:100%"*@>
<tr>
    <td><h3>Diagnostic Exams</h3></td>
    <td align="right">
        @{
            if (Session["USER_TYPE"].ToString() == "1" || Session["USER_TYPE"].ToString() == "2")
            {
                <a href=@Url.Action("Create", "DiagnosticExams")><img src="~/images/add_icon.png" /></a>
            }
        }
    </td>
</tr>
</table>

<table class="table">
<tr>
    <th>@Html.DisplayNameFor(model => model.ExamCategory)</th>
    <th>@Html.DisplayNameFor(model => model.ExamName)</th>
    <th></th>
</tr>

@foreach (var item in Model) {
<tr>
    <td><span class="table_field_value">@Html.DisplayFor(modelItem => item.GetCategoryName)</span></td>
    <td>
        <span class="table_field_value">@Html.DisplayFor(modelItem => item.ExamName)</span>
    </td>

    <td>
        @if (Session["USER_TYPE"].ToString() == "1" || Session["USER_TYPE"].ToString() == "2")
        {
            <a href=@Url.Action("Edit", new { id = item.Id }) alt="Edit"><img src="~/images/edit_ico.png" /></a>
        }
    </td>

</tr>
}

</table>
