@model JEVEGA_Us_Cliniic.ExamReportTemplate

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Layout_inner_page.cshtml";
}


<table class="table_clinic_pageheader">
    <tr>
        <td><h3>Report Template Details</h3></td>
        <td align="right"></td>
    </tr>
</table>

<div>
    <hr />

    <span class="text_form_value">Report Category : @Html.DisplayFor(model => model.getReportCategoryName)</span>
    <br /><br />

    <span class="text_form_value">Report Name : @Html.DisplayFor(model => model.ReportName)</span>
    <br /><br />

    <span class="text_form_value">Report Write-Ups :</span>
    <br /><br />
    <textarea id="report_writeups" class="textarea_report_template" readonly>@Html.DisplayFor(model => model.ReportWriteUps)</textarea>

</div>


<div class="line_space"></div>
<table class="table table-bordered">
    <tr>
        <td>
            <input type="button" value="Back To List" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "ReportTemplates") + "'");" />
            &nbsp;
            <input type="button" value="Update" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Edit/"+Model.Id, "ReportTemplates") + "'");" />
        </td>
    </tr>
</table>
