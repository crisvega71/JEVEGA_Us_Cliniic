@model IEnumerable<JEVEGA_Us_Cliniic.ExamReportTemplate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_inner_page.cshtml";
}

<table class="table_clinic_pageheader">
    <tr>
        <td><h3>Diagnostic Report Templates</h3></td>
        <td align="right">
            @{
                if (Session["USER_TYPE"].ToString() == "1" || Session["USER_TYPE"].ToString() == "2")
                {
                    <a href=@Url.Action("Create", "ReportTemplates")><img src="~/images/add_icon.png" /></a>
                }
            }
        </td>
    </tr>
</table>


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.ReportCategory)</th>
        <th>@Html.DisplayNameFor(model => model.ReportName)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.getReportCategoryName)</td>
            <td>@Html.DisplayFor(modelItem => item.ReportName)</td>

            <td>
                @if (Session["USER_TYPE"].ToString() == "1" || Session["USER_TYPE"].ToString() == "2")
                {
                    <a href=@Url.Action("Edit", new { id = item.Id }) alt="Edit"><img src="~/images/edit_ico.png" /></a>
                }
                - <a href=@Url.Action("Details", new { id = item.Id }) alt="Details"><img src="~/images/details_ico.png" /></a>

            </td>

        </tr>
    }

</table>